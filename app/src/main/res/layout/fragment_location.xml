<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/btn_findWtach"
        android:layout_width="79dp"
        android:layout_height="77dp"
        app:srcCompat="?android:attr/textSelectHandle"
        app:layout_constraintRight_toLeftOf="@+id/btn_vibrate"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_vibrate"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.508" />

    <ImageButton
        android:id="@+id/btn_vibrate"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="87dp"
        android:layout_height="85dp"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        app:layout_constraintTop_toTopOf="@+id/btn_vibrate"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_vibrate"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="322dp"
        android:layout_height="311dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>