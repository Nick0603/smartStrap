<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="336dp"
        android:layout_height="305dp"
        android:src="@drawable/map"
        app:srcCompat="@drawable/map"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/btn_findWtach"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="72dp"
        android:elevation="1dp"
        android:src="@drawable/find_watch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/find_watch"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/location_small"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toRightOf="@+id/btn_findWtach"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/location_small"
        app:layout_constraintTop_toTopOf="@+id/btn_findWtach"
        android:layout_marginTop="0dp" />


</android.support.constraint.ConstraintLayout>